<%- include("./partials/header") %>


<div class="background">

<h2>Here are the lists of products <%=  %> </h2>
<table class="table table-striped table-primary">
    <thead>
      <tr>
        <th>ID </th> 
        <th>Title</th>
        <th>Image</th>
        <th>Available Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
<tbody>
  <%if (products.length >0){ %>
  <% products.forEach(function(row){ %>
  <tr>
    <td><%=row._id%></td>
    <td><%=row.title%></td>
    <td><%=row.image%></td>
    <td><%=row.availQty%></td>
    <td><%=row.price%></td>
    <td><a href="/cart/<%=row._id%>" type="submit" class="btn btn-primary">Add to Cart</a></td>
  </tr>
  <% })}else{ %>
    <tr>
        <td colspan="6">No Record Found</td>
      </tr>
    <% } %>
</tbody>
</table>

</div>
<%- include("./partials/footer") %>
