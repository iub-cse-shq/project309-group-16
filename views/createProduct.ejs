<%- include("./partials/header") %>
<div class="background">

<div class="container mt-5">
    <a href="/home" class="btn btn-primary mb-5">Go Back</a>
    <h1>Add New Product</h1>
    <form action="/createProduct" method="POST" enctype='application/json'>
        <div class="form-group">
            <label for="exampleInputName">Title</label>
            <input type="title" name="title" class="form-control" id="title">
        </div>

        <div class="form-group">
            <label for="img">Image:</label>
            <input type="file" name="image" class="form-control" id="image" aria-describedby="image">
        </div>

        <div class="form-group">
            <label for="availQty">Quantity</label>
            <input type="number" name="availQty" class="form-control" id="availQty" aria-describedby="availQty">
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" name="price" class="form-control" id="price">
        </div>

        <button type="submit" class="btn btn-primary">Add Product</button>
    </form>
</div>

</div>
<%- include("./partials/footer") %>