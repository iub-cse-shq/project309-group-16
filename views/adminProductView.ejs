<%- include("./partials/header_admin") %>


<div class="background">

<h2>Here are the lists of products <%=  %> </h2>
<table class="table table-striped table-primary">
    <thead>
      <tr>
        <th>ID </th> 
        <th>Title</th>
        <th>Image</th>
        <th>Available Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
<tbody>
  <%if (products.length >0){ %>
  <% products.forEach(function(row){ %>
  <tr>
    <td><%=row._id%></td>
    <td><%=row.title%></td>
    <td><img src="<%=row.image%>" style="width:50px;height:60px;"></td>
    <td><%=row.availQty%></td>
    <td><%=row.price%></td>
<!--    <form action="adminProductView/delete/<%=row._id%>" method="delete" enctype='application/json'>
    <td><a href="/adminProductView" type="submit" class="btn btn-danger">Delete Product</a></td>
    </form> -->
  </tr>
  <% })}else{ %>
    <tr>
        <td colspan="6">No Record Found</td>
      </tr>
    <% } %>
</tbody>
</table>

</div>
